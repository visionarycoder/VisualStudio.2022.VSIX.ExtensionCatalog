<Project>
    <PropertyGroup>
        <!-- Code Quality -->
        <AnalysisLevel>latest-recommended</AnalysisLevel>
        <EnableNETAnalyzers>true</EnableNETAnalyzers>
        <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>

        <!-- Language Specification -->
        <LangVersion>latest</LangVersion>

        <!-- Specify the default project directory -->
        <BaseIntermediateOutputPath>$(MSBuildThisFileDirectory)src\$(MSBuildProjectName)\obj\</BaseIntermediateOutputPath>
        <OutputPath>$(MSBuildThisFileDirectory)src\$(MSBuildProjectName)\bin\</OutputPath>
    </PropertyGroup>
</Project>
